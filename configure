#!/usr/bin/env sh

set -e

SCRIPT_DIR="$(dirname "$(readlink -f "$0")")"
ITERM2_DIR=".config/iterm2"

cd "$SCRIPT_DIR"

rsync --exclude ".git" \
	--exclude ".gitconfig" \
	--exclude ".gitignore" \
	--exclude ".DS_Store" \
	--exclude "Brewfile" \
	--exclude "install" \
	--exclude "configure" \
	--exclude "LICENSE" \
	--exclude "README.md" \
	--exclude "$ITERM2_DIR" \
	-avh --no-perms . ~

[[ "$(defaults read com.googlecode.iterm2 LoadPrefsFromCustomFolder)" != "1" ]] &&
	defaults write com.googlecode.iterm2 PrefsCustomFolder -string "$SCRIPT_DIR/$ITERM2_DIR" &&
	defaults write com.googlecode.iterm2 LoadPrefsFromCustomFolder -bool true
