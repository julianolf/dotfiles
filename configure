#!/usr/bin/env sh

set -e

cd "$(dirname "$(readlink -f "$0")")"

rsync --exclude ".git" \
	--exclude "imgs" \
	--exclude ".gitconfig" \
	--exclude ".gitignore" \
	--exclude ".DS_Store" \
	--exclude "Brewfile" \
	--exclude "install" \
	--exclude "configure" \
	--exclude "LICENSE" \
	--exclude "README.md" \
	-avh --no-perms . ~
